#:kivy 2.1.0
<CalcWidget>
    BoxLayout:
        orientation:"vertical"
        size:root.width, root.height

        TextInput:
            id: calc_input
            text:"0"
            halign:"right"
            font_size: 45
            size_hint:(1,.15)

        GridLayout:
            cols: 4
            rows: 5

            #Row 1:
            Button:
                text:"AC"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.clear()
            Button:
                text:"+/-"
                size_hint:(.25,.20)
                font_size: 32
            Button:
                text:"%"
                size_hint:(.25,.20)
                font_size: 32
            Button:
                text:"/"
                size_hint:(.25,.20)
                font_size: 32

            #Row 2:
            Button:
                text:"7"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(7)
            Button:
                text:"8"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(8)
            Button:
                text:"9"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(9)
            Button:
                text:"*"
                size_hint:(.25,.20)
                font_size: 32

            #Row 3:
            Button:
                text:"4"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(4)
            Button:
                text:"5"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(5)
            Button:
                text:"6"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(6)
            Button:
                text:"-"
                size_hint:(.25,.20)
                font_size: 32

            #Row 4:
            Button:
                text:"1"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(1)
            Button:
                text:"2"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(2)
            Button:
                text:"3"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(3)
            Button:
                text:"+"
                size_hint:(.25,.20)
                font_size: 32

            #Row 5:
            Button:
                text:"OFF"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.exit()
            Button:
                text:"0"
                size_hint:(.25,.20)
                font_size: 32
                on_press:root.numeric_press(0)
            Button:
                text:","
                size_hint:(.25,.20)
                font_size: 32
            Button:
                text:"="
                size_hint:(.25,.20)
                font_size: 32